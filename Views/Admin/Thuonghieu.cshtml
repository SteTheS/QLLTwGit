@model IEnumerable<QLlaptop.Models.ThuongHieu>

@{
    ViewBag.Title = "Thuonghieu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách thương hiệu</h2>

<p>
    @Html.ActionLink("Thêm thương hiệu", "Themthuonghieu")
</p>
<table class="table" border="1">
    <tr>
        <th>
            Tên thương hiệu
        </th>
        <th>
            Giới thiệu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tenthuonghieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gioithieu)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Suathuonghieu", new { id=item.Mathuonghieu }) |
            @Html.ActionLink("Chi Tiết", "Chitietthuonghieu", new { id=item.Mathuonghieu }) |
            @Html.ActionLink("Xóa", "Xoathuonghieu", new { id=item.Mathuonghieu })
        </td>
    </tr>
}

</table>
