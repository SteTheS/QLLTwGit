@model QLlaptop.Models.DonDatHang

@{
    ViewBag.Title = "Xoaddh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa đơn đặt hàng</h2>

<h3>Bạn có muốn xóa?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Khachhang.Hoten)
        </dd>

        <dt>
            Ngày đặt hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayDH)
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaygiao)
        </dd>

        <dt>
            Tình trạng thanh toán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tinhtrangthanhtoan)
        </dd>

        <dt>
            Tình trạng giao hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tinhtranggiaohang)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay về danh sách", "Dondathang")
        </div>
    }
</div>
