                        <div class="row">
                            <div class="col-sm-6">
                                <div class="product-images">
                                    <div class="product-main-img">
                                        <img src="~/Content/images/All/@Model.ImageSP" alt="">
                                    </div>

                                    <div class="product-gallery">
                                        <img src="~/Content/images/All/@Model.ImageSP_1" alt="">
                                        <img src="~/Content/images/All/@Model.ImageSP_2" alt="">
                                        <img src="~/Content/images/All/@Model.ImageSP_3" alt="">
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="product-inner">
                                    <h2 class="product-name">@Model.TenSP</h2>
                                    <div class="product-inner-price">
                                        <ins>@Model.Giatien VNĐ</ins>
                                    </div>

                                    <form action="" class="cart">
                                        <div class="quantity">
                                            <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                                        </div>
                                        <div id="Datmua">
                                            <a href="@Url.Action("ThemGiohang","Giohang",new { @iMasanpham = @Model.MaSP,@strURL=Request.Url.ToString()})">
                                               ĐẶT MUA</a>
                                        </div>
                                        @*<button class="add_to_cart_button" type="submit">Add to cart</button>*@
                                    </form>

                                    <div class="product-inner-category">
                                        <p>Category: <a href="">Summer</a>. Tags: <a href="">awesome</a>, <a href="">best</a>, <a href="">sale</a>, <a href="">shoes</a>. </p>
                                    </div>

                                    <div role="tabpanel">
                                        <ul class="product-tab" role="tablist">
                                            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                                            <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Reviews</a></li>
                                        </ul>
                                        <div class="tab-content">
                                            <div role="tabpanel" class="tab-pane fade in active" id="home">
                                                <h2>Product Description</h2>
                                                <table class="table table-striped">
                                                    <tbody>
                                                        <tr>
                                                            <th scope="col">CPU</th>
                                                            <td>@Model.CPU</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">RAM</th>
                                                            <td>@Model.RAM</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Bộ nhớ</th>
                                                            <td>@Model.Bonho</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Card màn hình</th>
                                                            <td>@Model.GPU</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Màn hình</th>
                                                            <td>@Model.Manhinh</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Cổng giao tiếp</th>
                                                            <td>@Model.Conggiaotiep</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Audio</th>
                                                            <td>@Model.Audio</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">LAN</th>
                                                            <td>@Model.LAN</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Wifi</th>
                                                            <td>@Model.WIFI</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Bluetooth</th>
                                                            <td>@Model.Bluetooth</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Webcam</th>
                                                            <td>@Model.Webcam</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Hệ điều hành</th>
                                                            <td>@Model.HDH</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Pin</th>
                                                            <td>@Model.Pin</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Trọng lượng</th>
                                                            <td>@Model.Trongluong</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Màu sắc</th>
                                                            <td>@Model.Mausac</td>
                                                        </tr>
                                                        <tr>
                                                            <th scope="col">Kích thước</th>
                                                            <td>@Model.Kichthuoc</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div role="tabpanel" class="tab-pane fade" id="profile">
                                                <h2>Reviews</h2>
                                                <div class="submit-review">
                                                    <p><label for="name">Name</label> <input name="name" type="text"></p>
                                                    <p><label for="email">Email</label> <input name="email" type="email"></p>
                                                    <div class="rating-chooser">
                                                        <p>Your rating</p>

                                                        <div class="rating-wrap-post">
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                            <i class="fa fa-star"></i>
                                                        </div>
                                                    </div>
                                                    <p><label for="review">Your review</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                                    <p><input type="submit" value="Submit"></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>


