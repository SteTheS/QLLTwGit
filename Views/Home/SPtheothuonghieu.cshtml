@*@model IEnumerable<QLlaptop.Models.SanPham>*@

@using QLlaptop.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>


@{
    ViewBag.Title = "SPtheothuonghieu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SPtheothuonghieu</h2>

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @foreach (var sp in Model)
            {
                <div class="col-md-3 col-sm-6">

                    <div class="single-shop-product">
                        <div class="product-upper">
                            <a href="@Url.Action("Detail", "Home", new { id = sp.MaSP })"><img src="~/Content/images/All/@sp.ImageSP" alt="@sp.TenSP" /></a>
                            <h2><a href="@Url.Action("Detail", "Home", new { id = sp.MaSP })">@sp.TenSP</a></h2>
                        </div>
                        <div class="product-carousel-price">
                            <ins>@sp.Giatien VNĐ</ins>
                        </div>

                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="@Url.Action("ThemGiohang","GioHang",new { @iMasanpham = sp.MaSP,@strURL=Request.Url.ToString()})">Add to cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("SPtheothuonghieu", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline
    }
</style>